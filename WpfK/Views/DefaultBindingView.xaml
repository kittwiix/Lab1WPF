<UserControl x:Class="WpfK.Views.DefaultBindingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:WpfK">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10" MinWidth="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=HeaderWindowTitle}"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold" />

        <Border Grid.Row="0"
                Grid.Column="1"
                Background="White"
                CornerRadius="3"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1"
                Margin="5"
                Padding="8">
            <TextBlock Text="{Binding Title}"
                       FontWeight="Bold"
                       Foreground="#FF0066CC"
                       VerticalAlignment="Center" />
        </Border>

        <!-- Синхронизируемый текст -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=HeaderSync}"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold" />

        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Text="{Binding SyncText, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5"
                 Padding="8"
                 BorderBrush="#FF007ACC"
                 BorderThickness="1"
                 Background="White"
                 VerticalContentAlignment="Center"
                 MinWidth="200" />

        <!-- Прогресс-бар -->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=HeaderProgress}"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold" />

        <Border Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                Padding="5"
                Background="White"
                CornerRadius="3"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1">
            <StackPanel>
                <ProgressBar Value="{Binding ProgressValue}"
                             Minimum="0"
                             Maximum="100"
                             Height="20"
                             BorderBrush="#FF007ACC"
                             BorderThickness="1" />
                <TextBlock Text="{Binding ProgressValue, StringFormat={}{0}%}"
                           HorizontalAlignment="Center"
                           Margin="0,3,0,0"
                           FontSize="12" />
            </StackPanel>
        </Border>

        <!-- Включение/выключение -->
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=HeaderState}"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold" />

        <Border Grid.Row="3"
                Grid.Column="1"
                Background="White"
                CornerRadius="3"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1"
                Margin="5"
                Padding="8">
            <TextBlock Text="{Binding IsEnabled}"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Foreground="#FF009933" />
        </Border>

        <!-- Время запуска -->
        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=HeaderLaunchTime}"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold" />

        <Border Grid.Row="4"
                Grid.Column="1"
                Background="White"
                CornerRadius="3"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1"
                Margin="5"
                Padding="8">
            <TextBlock Text="{Binding InitialTime}"
                       FontStyle="Italic"
                       VerticalAlignment="Center"
                       Foreground="#FF666666" />
        </Border>

        <!-- Только для чтения -->
        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=HeaderReadOnly}"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold" />

        <Border Grid.Row="5"
                Grid.Column="1"
                Background="#FFF5F5F5"
                CornerRadius="3"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1"
                Margin="5"
                Padding="8">
            <TextBlock Text="{Binding ReadOnlyText}"
                       VerticalAlignment="Center"
                       Foreground="#FF666666"
                       FontStyle="Italic" />
        </Border>

        <!-- Список данных -->
        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=HeaderDataList}"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold" />

        <Border Grid.Row="6"
                Grid.Column="1"
                Background="White"
                CornerRadius="3"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1"
                Margin="5">
            <ListView ItemsSource="{Binding DataList}"
                      Height="120"
                      BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=GridViewValue}"
                                        Width="240">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               VerticalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Кнопки управления -->
        <Border Grid.Row="7"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="White"
                CornerRadius="5"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1"
                Margin="5"
                Padding="15">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=BtnRefresh}"
                        Command="{Binding RefreshCommand}"
                        Margin="8"
                        Padding="15,8"
                        Background="#FF007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        MinWidth="120" />

                <Button Content="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=BtnSwitch}"
                        Command="{Binding SwitchCommand}"
                        Margin="8"
                        Padding="15,8"
                        Background="#FF009933"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        MinWidth="120" />

                <Button Content="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=BtnReset}"
                        Command="{Binding ResetCommand}"
                        Margin="8"
                        Padding="15,8"
                        Background="#FFFF3333"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        MinWidth="120" />

                <Button Content="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=BtnAddRecord}"
                        Command="{Binding AddDataCommand}"
                        Margin="8"
                        Padding="15,8"
                        Background="#FF9933CC"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        MinWidth="120" />
            </StackPanel>
        </Border>

        <!-- Объяснение привязки по умолчанию -->
        <Border Grid.Row="8"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#FFF8F8F8"
                CornerRadius="5"
                BorderBrush="#FF0066CC"
                BorderThickness="1"
                Margin="5"
                Padding="10">
            <StackPanel>
                <TextBlock Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=DefaultBindingTitle}"
                           FontWeight="Bold"
                           Foreground="#FF0066CC"
                           Margin="0,0,0,5" />
                <TextBlock Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=DefaultBindingText1}"
                           TextWrapping="Wrap" />
                <TextBlock Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=DefaultBindingText2}"
                           TextWrapping="Wrap" />
                <TextBlock Text="{Binding Source={x:Static loc:LocalizationManager.Instance}, Path=DefaultBindingText3}"
                           TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
    </ScrollViewer>
</UserControl>
