<UserControl x:Class="WpfK.Views.TriggersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfK.Views"
             mc:Ignorable="d"
             d:DesignHeight="1446"
             d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10"
              MinWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0"
                       Text="Триггеры WPF (Triggers)"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#FF0066CC"
                       Margin="0,0,0,20" />

            <!-- Property Triggers -->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#FF009933"
                    BorderThickness="2"
                    Margin="10"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Property Triggers (Триггеры свойств)"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#FF009933"
                               Margin="0,0,0,10" />

                    <Button Content="Наведите курсор"
                            Width="250"
                            Height="45"
                            FontSize="14"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#FF007ACC" />
                                <Setter Property="Foreground"
                                        Value="White" />
                                <Setter Property="BorderThickness"
                                        Value="0" />
                                <Setter Property="FontWeight"
                                        Value="Normal" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#FF009933" />
                                        <Setter Property="FontWeight"
                                                Value="Bold" />
                                        <Setter Property="FontSize"
                                                Value="16" />
                                    </Trigger>
                                    <Trigger Property="IsPressed"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#FF006600" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="Срабатывает при изменении свойства элемента"
                               Margin="0,15,0,0"
                               TextWrapping="Wrap"
                               Foreground="#FF666666"
                               FontStyle="Italic" />
                </StackPanel>
            </Border>

            <!-- Data Triggers -->
            <Border Grid.Row="2"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#FF9933CC"
                    BorderThickness="2"
                    Margin="10"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Data Triggers (Триггеры данных)"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#FF9933CC"
                               Margin="0,0,0,10" />

                    <TextBlock Text="Введите текст (попробуйте пустую строку или 10 символов):"
                               Margin="0,0,0,10"
                               FontWeight="SemiBold" />

                    <TextBox Text="{Binding DataTriggerText, UpdateSourceTrigger=PropertyChanged}"
                             MinWidth="250"
                             MaxWidth="500"
                             Margin="0,0,0,15"
                             Padding="10"
                             BorderBrush="#FF9933CC"
                             BorderThickness="1"
                             FontSize="14"
                             HorizontalAlignment="Left" />

                    <Border Background="#FFF0F0F0"
                            Padding="15"
                            CornerRadius="5"
                            BorderBrush="#FF9933CC"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Статус:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5" />
                            <TextBlock FontSize="14">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground"
                                                Value="Gray" />
                                        <Setter Property="Text"
                                                Value="Введите текст" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataTriggerText}"
                                                         Value="">
                                                <Setter Property="Text"
                                                        Value="⚠ Поле пустое" />
                                                <Setter Property="Foreground"
                                                        Value="Red" />
                                                <Setter Property="FontWeight"
                                                        Value="Bold" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DataTriggerText.Length}"
                                                         Value="10">
                                                <Setter Property="Text"
                                                        Value="✓ Ровно 10 символов!" />
                                                <Setter Property="Foreground"
                                                        Value="Green" />
                                                <Setter Property="FontWeight"
                                                        Value="Bold" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DataTriggerText.Length}"
                                                         Value="0">
                                                <Setter Property="Text"
                                                        Value="⚠ Поле пустое" />
                                                <Setter Property="Foreground"
                                                        Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Срабатывает на основе данных привязки"
                               Margin="0,15,0,0"
                               TextWrapping="Wrap"
                               Foreground="#FF666666"
                               FontStyle="Italic" />
                </StackPanel>
            </Border>

            <!-- Event Triggers -->
            <Border Grid.Row="3"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#FFFF3333"
                    BorderThickness="2"
                    Margin="10"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Event Triggers (Триггеры событий)"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#FFFF3333"
                               Margin="0,0,0,10" />

                    <Border x:Name="EventTriggerBox"
                            Background="#FF007ACC"
                            Width="300"
                            Height="120"
                            CornerRadius="8"
                            Cursor="Hand"
                            HorizontalAlignment="Left">

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="#FF009933"
                                                        Duration="0:0:0.3"
                                                        Storyboard.TargetProperty="Background.Color" />
                                        <DoubleAnimation To="320"
                                                         Duration="0:0:0.3"
                                                         Storyboard.TargetProperty="Width" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="#FF007ACC"
                                                        Duration="0:0:0.3"
                                                        Storyboard.TargetProperty="Background.Color" />
                                        <DoubleAnimation To="300"
                                                         Duration="0:0:0.3"
                                                         Storyboard.TargetProperty="Width" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>

                        <TextBlock Text="Наведите курсор (анимация)"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="16" />
                    </Border>

                    <TextBlock Text="Срабатывает при возникновении события"
                               Margin="0,15,0,0"
                               TextWrapping="Wrap"
                               Foreground="#FF666666"
                               FontStyle="Italic" />
                </StackPanel>
            </Border>

            <!-- Multi Trigger -->
            <Border Grid.Row="4"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#FF0066CC"
                    BorderThickness="2"
                    Margin="10"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Multi Trigger (Множественный триггер свойств)"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#FF0066CC"
                               Margin="0,0,0,10" />

                    <CheckBox x:Name="MultiTriggerCheckBox"
                              Content="Включить опцию"
                              Margin="0,0,0,10"
                              FontSize="14" />

                    <Button Content="Кнопка с MultiTrigger"
                            Width="250"
                            Height="45"
                            FontSize="14"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#FFCCCCCC" />
                                <Setter Property="Foreground"
                                        Value="Black" />
                                <Setter Property="BorderThickness"
                                        Value="0" />
                                <Setter Property="IsEnabled"
                                        Value="False" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=MultiTriggerCheckBox}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="True" />
                                    </DataTrigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver"
                                                       Value="True" />
                                            <Condition Property="IsEnabled"
                                                       Value="True" />
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Background"
                                                Value="#FF009933" />
                                        <Setter Property="Foreground"
                                                Value="White" />
                                        <Setter Property="FontWeight"
                                                Value="Bold" />
                                    </MultiTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="Срабатывает когда все условия выполнены"
                               Margin="0,15,0,0"
                               TextWrapping="Wrap"
                               Foreground="#FF666666"
                               FontStyle="Italic" />
                </StackPanel>
            </Border>

            <!-- MultiData Trigger -->
            <Border Grid.Row="5"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#FF9933CC"
                    BorderThickness="2"
                    Margin="10"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="MultiData Trigger (Множественный триггер данных)"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#FF9933CC"
                               Margin="0,0,0,10" />

                    <TextBlock Text="Введите текст и включите опцию:"
                               Margin="0,0,0,10"
                               FontWeight="SemiBold" />

                    <TextBox Text="{Binding DataTriggerText, UpdateSourceTrigger=PropertyChanged}"
                             Width="400"
                             Margin="0,0,0,10"
                             Padding="10"
                             BorderBrush="#FF9933CC"
                             BorderThickness="1"
                             FontSize="14" />

                    <CheckBox x:Name="MultiDataCheckBox"
                              Content="Включить опцию"
                              Margin="0,0,0,15"
                              FontSize="14" />

                    <Border Background="#FFF0F0F0"
                            Padding="15"
                            CornerRadius="5"
                            BorderBrush="#FF9933CC"
                            BorderThickness="1">
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground"
                                            Value="Gray" />
                                    <Setter Property="Text"
                                            Value="Условия не выполнены" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding DataTriggerText.Length}"
                                                           Value="10" />
                                                <Condition Binding="{Binding IsChecked, ElementName=MultiDataCheckBox}"
                                                           Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Text"
                                                    Value="✓ Все условия выполнены!" />
                                            <Setter Property="Foreground"
                                                    Value="Green" />
                                            <Setter Property="FontWeight"
                                                    Value="Bold" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>

                    <TextBlock Text="Срабатывает когда все условия на основе данных выполнены"
                               Margin="0,15,0,0"
                               TextWrapping="Wrap"
                               Foreground="#FF666666"
                               FontStyle="Italic" />
                </StackPanel>
            </Border>

            <!-- Сравнительная таблица с ListView -->
            <Border Grid.Row="6"
                    Background="#FFF8F8F8"
                    CornerRadius="8"
                    BorderBrush="#FF666666"
                    BorderThickness="2"
                    Margin="10"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Сравнение типов триггеров:"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="0,0,0,15" />

                    <ListView x:Name="TriggersComparison"
                              Height="200"
                              BorderThickness="0"
                              Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Тип триггера"
                                                Width="150"
                                                DisplayMemberBinding="{Binding Type}" />
                                <GridViewColumn Header="Условие срабатывания"
                                                Width="250"
                                                DisplayMemberBinding="{Binding Condition}" />
                                <GridViewColumn Header="Пример"
                                                Width="200"
                                                DisplayMemberBinding="{Binding Example}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>