<Application x:Class="WpfK.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:WpfK.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <conv:LocalizedFormatConverter x:Key="LocalizedFormatConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfK;component/Resources/Strings.ru.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>