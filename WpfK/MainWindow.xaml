<Window x:Class="WpfK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfK.Views"
        Title="{DynamicResource WindowTitle}"
        Height="700"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        Background="#FFF0F0F0"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="15,10" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="#FF0066CC" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Переключатель языка -->
        <Border Grid.Row="0" Background="White" Padding="10" BorderBrush="#FFCCCCCC" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{DynamicResource LabelLanguage}"
                           VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold" />
                <ComboBox x:Name="LanguageComboBox" Width="120" SelectionChanged="LanguageComboBox_SelectionChanged">
                    <ComboBoxItem Content="Русский" Tag="ru" IsSelected="True" />
                    <ComboBoxItem Content="English" Tag="en" />
                </ComboBox>
            </StackPanel>
        </Border>
        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource TabDefaultBinding}">
                <views:DefaultBindingView />
            </TabItem>

            <TabItem Header="{DynamicResource TabTwoWayBinding}">
                <views:TwoWayBindingView />
            </TabItem>

            <TabItem Header="Одноразовая привязка">
                <views:OneTimeBindingView />
            </TabItem>

            <TabItem Header="Односторонние привязки">
                <views:OneWayBindingView />
            </TabItem>

            <TabItem Header="Триггеры">
                <views:TriggersView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
