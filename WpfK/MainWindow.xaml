<Window x:Class="WpfK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfK.Views"
        Title="WPF Привязки и Триггеры"
        Height="700"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        Background="#FFF0F0F0"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="15,10" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="#FF0066CC" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- Вкладка 1: Привязка по умолчанию -->
            <TabItem Header="Привязка по умолчанию">
                <views:DefaultBindingView />
            </TabItem>

            <!-- Вкладка 2: Двухсторонняя привязка -->
            <TabItem Header="Двухсторонняя привязка">
                <views:TwoWayBindingView />
            </TabItem>

            <!-- Вкладка 3: Одноразовая привязка -->
            <TabItem Header="Одноразовая привязка">
                <views:OneTimeBindingView />
            </TabItem>

            <!-- Вкладка 4: Односторонние привязки -->
            <TabItem Header="Односторонние привязки">
                <views:OneWayBindingView />
            </TabItem>

            <!-- Вкладка 5: Триггеры -->
            <TabItem Header="Триггеры">
                <views:TriggersView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
